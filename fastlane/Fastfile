# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#

# Uncomment the line if you want fastlane to automatically update itself
#update_fastlane

default_platform(:ios)

platform :ios do
  desc "Generate new localized screenshots"
  lane :screenshots do
    capture_screenshots(scheme: "iOSSampleApp")
  end
end

desc "Run all unit tests"
lane :tests do
  run_tests(devices: ["iPhone 6s"],
            scheme: "iOSSampleApp")
end

desc "Bootstrap Carthage depedencies"
lane :carthage_bootstrap do
	carthage(command: "bootstrap",
			 platform: "iOS",
			 cache_builds: true)
end

desc "Uploads test coverage"
lane :test_coverage do
	codecov_reporter(
    	token: ENV["CODECOV_TOKEN"]
	)
end